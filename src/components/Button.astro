---
interface Props {
    id?: string;
	text: string;
    href?: string;
}

const { text, href, id } = Astro.props;

---

<a id={ id } href={ href }>{ text }</a>

<style>

    a {
        display: block;
        width: fit-content;
        text-decoration: none;
        border: none;
        height: 62px;
        padding: 20px 35px;
        border-radius: 7px;
        background: var(--green-cyan);
        color: var(--bg-site);
        font-weight: 700;
        font-family: "Fraunces", serif;
        font-size: 18px;
        cursor: pointer;
        transition: background .2s ease;
    }

    a:hover {
        background: var(--light-green);
    }

</style>