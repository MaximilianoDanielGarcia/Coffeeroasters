---
interface Props {
	title: string;
	desc: string;
	src: string;
}

const { src, title, desc } = Astro.props;
---

<div class="card-coffee">

    <img src=`${ src }` alt=`${ title } image.`>
    <div class="card-coffee-title">
        <h3>{ title }</h3>
        <p>{ desc }</p>
    </div>
</div>

<style>
    .card-coffee {
        display: flex;
        flex-direction: column;
        gap: 50px;
        width: 100%;
        min-width: 200px;
        max-width: 260px;
        text-align: center;
    }

    .card-coffee-title {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    h3 {
        font-family: "Fraunces", serif;
        color: var(--text-dark);
        font-size: 25px;
        font-weight: 900;
    }
    
    p {
        line-height: 26px;
        color: var(--text-dark);
        font-size: 16px;
    }

    @media screen and (width <= 900px) {

        .card-coffee {
            display: grid;
            grid-template-columns: 50% 50%;
            align-items: center;
            gap: 0px;
            max-width: 100%;
            text-align: left;

            & > img {
                width: 90%;
            }
        }

        h3 {
            font-size: 32px;
        }
        
        p {
            line-height: 32px;
            font-size: 18px;
        }
    }

    @media screen and (width <= 600px) {
        .card-coffee {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 20px;
            max-width: 100%;
            text-align: center;

            & > img {
                width: 75%;
            }
        }

        h3 {
            font-size: 28px;
        }
        
        p {
            line-height: 28px;
            font-size: 16px;
        }
    }

</style>