---
import { getImage } from 'astro:assets';
import Button from './Button.astro';

interface Props {
    title: string;
	desc: string;
    src: string;
    srcTablet?: string;
    srcMobile?: string;
    height: string;
    heightTablet?: string;
    heightMobile?: string;
    textbutton?: string;
    hrefbutton?: string;
}

const { title, desc, src, height, textbutton, hrefbutton, srcTablet, srcMobile, heightTablet, heightMobile } = Astro.props;

---

<div class="banner">
    <div class="content">
        <h2>{ title }</h2>
        <p>{ desc }</p>
        {textbutton && 
        
        <div class="button-container">
            <Button text={ textbutton } href={ hrefbutton }/>
        </div>
        }
        
    </div>
</div>

<style define:vars={{src, srcMobile, srcTablet, height, heightTablet, heightMobile}}>
    .banner {
        background-color: black;
        background-repeat: no-repeat;
        background-image: var(--src);
        background-size: cover;
        background-position: right;
        border-radius: 12px;
        min-height: var(--height);
        width: 100%;
    }

    .content {
        display: flex;
        flex-direction: column;
        gap: 30px;
        width: 50%;
        padding: 9.5% 4.5%;
    }

    .button-container {
        margin-top: 12px;
    }

    h2 {
        font-family: "Fraunces", serif;
        color: white;
        font-size: clamp(56px, 4.4vw, 66px);
        line-height: 80px;
        letter-spacing: 2px;
        font-weight: 900;
        text-wrap: stable;
    }

    p {
        line-height: 28px;
        color: lightgray;
        width: 75%;
        font-size: 16px;
    }

    @media screen and (width <= 1100px) {
        .content {
            width: 70%;
            padding: 14% 9%;
        }

        .button-container {
            width: 75%;
        }
    }

    @media screen and (width <= 900px) {
        .banner {
            background-image: var(--srcTablet);
            min-height: var(--heightTablet);
        }

        .content {
            width: 75%;
            padding: 14% 9%;
        }

        .button-container {
            width: 100%;
        }

        h2 {
            font-size: clamp(40px, 6vw, 52px);
            line-height: 55px;
        }

        p {
            line-height: 28px;
            width: 100%;
            font-size: 16px;
        }
    }

    @media screen and (width <= 600px) {
        .banner {
            background-image: var(--srcMobile);
            min-height: var(--heightMobile);
        }

        .content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 30% 8%;
            text-align: center;
        }

        .button-container {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        h2 {
            font-size: clamp(36px, 10vw, 56px);
            line-height: clamp(44px, 10vw, 56px);
        }

        p {
            line-height: 28px;
            width: 100%;
            font-size: 16px;
        }
    }

</style>